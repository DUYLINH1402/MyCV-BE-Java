# =====================================
# Portfolio API - Environment Variables Template
# Copy file này thành .env và điền giá trị thực
# QUAN TRỌNG: KHÔNG commit file .env lên Git!
# =====================================

# =====================================
# Database Configuration
# =====================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portfolio_db
DB_USERNAME=postgres
DB_PASSWORD=your-secure-password-here

# =====================================
# JWT Security
# =====================================
JWT_SECRET_KEY=your-256-bit-secret-key-for-jwt-token-signing-must-be-long-enough

# =====================================
# Server Configuration
# =====================================
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# =====================================
# CI/CD Configuration (for GitHub Actions)
# =====================================
GITHUB_REPOSITORY=your-username/portfolio-api
IMAGE_TAG=latest

# =====================================
# Production URLs (Optional)
# =====================================
STAGING_URL=https://staging.your-domain.com
PRODUCTION_URL=https://your-domain.com

